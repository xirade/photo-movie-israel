{
  "kind": "collectionType",
  "collectionName": "abouts",
  "info": {
    "name": "about"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "avatars": {
      "type": "component",
      "repeatable": false,
      "component": "about.avatars"
    }
  }
}
